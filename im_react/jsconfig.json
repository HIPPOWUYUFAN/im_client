{
    "compilerOptions": {
        "jsx": "react",
        "target": "es6",
        "baseUrl": "./",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "inlineSourceMap": false,
        "inlineSources": false,
        "sourceMap": true,
        "paths": {
            "@pages/*": [
                "src/pages/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@routers/*": [
                "src/routers/*"
            ],
            "@store/*": [
                "src/store/*"
            ],
            "@assets/*": [
                "src/assets/*"
            ],
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "src"
    ]
}